<!doctype html>
<html class="no-js" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Danh sách</title>
    <meta name="robots" content="noindex, follow" />
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="public/images/favicon.ico">

    <!-- CSS
	============================================ -->
    <!-- google fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,500,500i,700,700i,900" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- audio & video player CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/plyr/3.6.9/plyr.min.css">
    <!-- Slick CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.css">
    <!-- nice-select CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/jquery-nice-select@1.1.0/css/nice-select.css">
    <!-- perfect scrollbar css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery.perfect-scrollbar/1.5.3/css/perfect-scrollbar.min.css">
    <!-- light gallery css -->
    <link rel="stylesheet" href="public/stylesheets/plugins/lightgallery.min.css">
    <!-- Icon Font CSS -->
    <link rel="stylesheet" href="public/stylesheets/vendor/bicon.min.css">
    <!-- Flat Icon CSS -->
    <link rel="stylesheet" href="public/stylesheets/vendor/flaticon.css">
    <!-- Main Style CSS -->
    <link rel="stylesheet" href="public/stylesheets/style.css">

</head>

<body>

    <!-- header area start -->
    <header>
        <div class="header-top sticky  d-none d-lg-block header-color">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-5">
                        <!-- header top navigation start -->
                        <div class="header-top-navigation">
                            <nav>
                                <ul>
                                    <li>
                                        <div class="brand-logo">
                                            <a href="/main"><img src="public/images/logo/logo.png" alt="brand logo"/></a>
                                        </div>        
                                    </li>
                                    <li><a href="/main">Trang chủ</a></li>
                                    <li><a href="/noti">Thông báo</a></li>
                                    <li class="active">
                                        <a href="/list">Danh sách</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>

                    

                    <div class="col-md-5">
                        <div class="header-top-center d-flex align-items-center justify-content-end">
                            <!-- header top search start -->
                            <div class="header-top-search">
                                <form class="top-search-box">
                                    <input type="text" placeholder="Search" class="top-search-field"/>
                                    <button class="top-search-btn"><i class="flaticon-search"></i> </button>
                                </form>
                            </div>

                            <div class="profile-setting-box">
                                
                                <div class="profile-thumb-small">
                                        <a href="javascript:void(0)" class="profile-triger">
                                        <figure><img src="<%= user.avatar %>" alt="profile picture"/></figure>
                                    </a>                                    
                                    
                                    <div class="profile-dropdown">
                                        <div class="profile-head">
                                            <h5 class="name">
                                                <a href="/profile"><%= user.name %></a>
                                            </h5>
                                            <a class="mail" href="#"
                                                ><%= user.email %></a
                                            >
                                        </div>
                                        <div class="profile-body">
                                            <ul>
                                                <li>
                                                    <a href="/profile"><i class="flaticon-user"></i>My Profile</a>
                                                </li>
                                                <% if (user.role == 'admin') { %>
                                                    <li>
                                                        <a href="/register"><i class="flaticon-settings"></i>Create F/D Account</a>
                                                    </li>
                                                <% } else { %>
                                                    <li>
                                                        <a href="/register"><i class="flaticon-users"></i>Edit Profile</a>
                                                    </li>
                                                    <% } %>
                                                <!-- <li>
                                                    <a href="#"><i class="flaticon-settings"></i>Setting</a>
                                                </li> -->
                                                <li>
                                                    <a href="/logout"><i class="flaticon-unlock"></i>Sign out</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <a><b> &nbsp;<%= user.name %></b></a>
                            <!-- profile picture end -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- header area end -->

    <!-- header area for mobile start -->
    <header>
        <div class="mobile-header-wrapper sticky d-block d-lg-none header-top-navigation">
            <div class="mobile-header position-relative">
                <div class="mobile-logo">
                    <a href="/main">
                        <img src="public/images/logo/logo.png" alt="logo" />
                    </a>
                </div>
                <div class="mobile-menu w-100">
                    <ul>
                        <li><a href="/main">Trang chủ</a></li>
                        <li><a href="/noti">Thông báo</a></li>
                        <li class="active">
                            <a href="/list">Danh sách</a>
                        </li>
                    </ul>
                </div>
                <!-- profile picture start -->

                <div class="mobile-header-profile">
                    <div class="profile-setting-box">
                        <div class="profile-thumb-small">
                            
                            <a href="javascript:void(0)" class="profile-triger" >
                                <figure>
                                    <img src="<%= user.avatar %>" alt="profile picture"/>
                                </figure>
                            </a>

                            <div class="profile-dropdown">
                                <div class="profile-head">
                                    <h5 class="name">
                                        <a href="/profile"><%= user.name %></a>
                                    </h5>
                                    <a class="mail" href="#"><%= user.email %></a>
                                </div>
                                <div class="profile-body">
                                    <ul>
                                        <li>
                                            <a href="/profile"><i class="flaticon-user"></i>My Profile</a>
                                        </li>
                                        <% if (user.role == 'admin') { %>
                                            <li>
                                                <a href="/register"><i class="flaticon-settings"></i>Create F/D Account</a>
                                            </li>
                                        <% } else { %>
                                            <li>
                                                <a href="/register"><i class="flaticon-users"></i>Edit Profile</a>
                                            </li>
                                            <% } %>
                                            <!-- <a href="#"><i class="flaticon-settings"></i>Setting</a> -->
                                        </li>
                                        <li>
                                            <a href="/logout"><i class="flaticon-unlock"></i>Sign out</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- profile picture end -->
                </div>
            </div>
        </div>
    </header>
    <!-- header area for mobile end -->

    <main>

        <div class="main-wrapper">
            <!-- profile banner area start -->
            <div class="profile-banner-large bg-img" data-bg="public/images/banner/profile-banner.jpg"></div>
            <!-- profile banner area end -->

            <!-- sendary menu start -->
            <div class="menu-secondary">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="secondary-menu-wrapper secondary-menu-2 bg-white">
                                <div class="page-title-inner">
                                    <h4 class="page-title">Tổng hợp danh sách</h4>
                                </div>
                                <div class="filter-menu">
                                    <button class="active" data-filter="*">Tất cả</button>
                                    <button data-filter=".deparment">Phòng ban</button>
                                    <button data-filter=".faculty">Khoa</button>
                                    <button data-filter=".student">Sinh viên</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- sendary menu end -->

            <!-- friend section start -->
            <div class="friends-section mt-20">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <div class="content-box friends-zone">
                                <div class="row mt--20 friends-list">
                                    
                                    <% if (list_all.length > 0) { %>
                                        <% list_all.forEach(function(row) { %>
                                            <% if (row.role == 0) { %>
                                            <div class="col-lg-3 col-sm-6 student >">
                                                <div class="friend-list-view">
                                                    <!-- profile picture end -->
                                                    <div class="profile-thumb">
                                                        <a href="#">
                                                            <figure class="profile-thumb-middle">
                                                                <img src="<%= row.avatar %>" alt="profile picture">
                                                            </figure>
                                                        </a>
                                                    </div>
                                                    <!-- profile picture end -->

                                                    <div class="posted-author">
                                                        <!-- <h6 class="author"><a href="/profile"><%= row.name %></a></h6> -->
                                                        <% if(row._id == userId){ %>
                                                            <h6 class="author"><a href="/profile"><%= row.name %></a></h6>
                                                        <% } else { %>
                                                            <h6 class="author"><a href="/<%= '0' + row.googleId %>"><%= row.name %></a></h6>
                                                        <% } %>
                                                    </div>
                                                </div>
                                            </div>

                                        <% } else if (row.role == 'F/D' && row.name.includes('Phòng') == true) { %>
                                            <div class="col-lg-3 col-sm-6 deparment >">
                                                <div class="friend-list-view">
                                                    <!-- profile picture end -->
                                                    <div class="profile-thumb">
                                                        <a href="#">
                                                            <figure class="profile-thumb-middle">
                                                                <img src="<%= row.avatar %>" alt="profile picture">
                                                            </figure>
                                                        </a>
                                                    </div>
                                                    <!-- profile picture end -->

                                                    <div class="posted-author">
                                                        <!-- <h6 class="author"><a href="/profile"><%= row.name %></a></h6> -->
                                                        <% if(row._id == userId){ %>
                                                            <h6 class="author"><a href="/profile"><%= row.name %></a></h6>
                                                        <% } else { %>
                                                            <h6 class="author"><a href="/<%= '1' + row._id %>"><%= row.name %></a></h6>
                                                        <% } %>
                                                    </div>
                                                </div>
                                            </div>

                                            <% } else if (row.role == 'F/D' && row.name.includes('Khoa') == true) { %>
                                                <div class="col-lg-3 col-sm-6 faculty >">
                                                    <div class="friend-list-view">
                                                        <!-- profile picture end -->
                                                        <div class="profile-thumb">
                                                            <a href="#">
                                                                <figure class="profile-thumb-middle">
                                                                    <img src="<%= row.avatar %>" alt="profile picture">
                                                                </figure>
                                                            </a>
                                                        </div>
                                                        <!-- profile picture end -->
    
                                                        <div class="posted-author">
                                                            <!-- <h6 class="author"><a href="/profile"><%= row.name %></a></h6> -->
                                                            <% if(row._id == userId){ %>
                                                                <h6 class="author"><a href="/profile"><%= row.name %></a></h6>
                                                            <% } else { %>
                                                                <h6 class="author"><a href="/<%= '1' + row._id %>"><%= row.name %></a></h6>
                                                            <% } %>
                                                        </div>
                                                    </div>
                                                </div>
                                            <% } %>
                                        <% }) %>
                                    <% } %>
                                                                       
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- friend section end -->
        </div>



    </main>


    <!-- JS ============================================ -->

    <!-- Modernizer JS -->
    <script src="public/javascripts/vendor/modernizr-3.6.0.min.js"></script>
    <!-- jQuery JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Slick Slider JS -->
    <script src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
    <!-- nice select JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-nice-select/1.1.0/js/jquery.nice-select.min.js"></script>
    <!-- audio video player JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/plyr/3.6.9/plyr.min.js"></script>
    <!-- perfect scrollbar js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.perfect-scrollbar/1.5.3/perfect-scrollbar.min.js"></script>
    <!-- light gallery js -->
    <script src="public/javascripts/plugins/lightgallery-all.min.js"></script>
    <!-- image loaded js -->
    <script src="https://unpkg.com/imagesloaded@4/imagesloaded.pkgd.min.js"></script>
    <!-- isotope filter js -->
    <script src="https://unpkg.com/isotope-layout@3/dist/isotope.pkgd.js"></script>
    <!-- Main JS -->
    <script src="public/javascripts/main.js"></script>

</body>

</html>